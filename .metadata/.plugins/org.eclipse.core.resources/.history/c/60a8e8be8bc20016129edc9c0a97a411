    public void printticket(){
        byte [] sends;
        //设置页模式 1b 4c
        sends = new byte[2];
        sends[0] = 0x1b;
        sends[1] = 0x4c;
        mService.write(sends);
        //设置页面大小 1b 57 00 00 00 00 80 01 30 01
        sends = new byte[10];
        sends[0] = 0x1b;
        sends[1] = 0x57;
        sends[2] = 0x00;
        sends[3] = 0x00;
