    public void printGoodsInfo(int i){
           //int i = 87;
            byte [] sends;
            //设置页模式 1b 4c
            sends = new byte[2];
            sends[0] = 0x1b;
            sends[1] = 0x4c;
            mService.write(sends);
            //设置页面大小 1b 57 00 00 00 00 80 01 30 01
            sends = new byte[10];
            sends[0] = 0x1b;
            sends[1] = 0x57;
            sends[2] = 0x00;
            sends[3] = 0x00;
            sends[4] = 0x00;
            sends[5] = 0x00;
            sends[6] = (byte) 0x80;
            sends[7] = 0x01;
            sends[8] = 0x30;
            sends[9] = 0x02;
            mService.write(sends);
            //设置纵向打印
//            sends = new byte[3];
//            sends[0] = 0x1b;
//            sends[1] = 0x56;
//            sends[2] = 0x00;
//            mService.write(sends);
            printtable1();


            //横坐标
            sends = new byte[4];
            sends[0] = 0x1b;
            sends[1] = 0x24;
            sends[2] = (byte) 0x30;
            sends[3] = 0x00;
            mService.write(sends);
            //纵坐标
            sends = new byte[4];
            sends[0] = 0x1d;
            sends[1] = 0x24;
            sends[2] = (byte) 0x40;
            sends[3] = 0x00;
            mService.write(sends);
            //设置三倍字体大小
            sends = new byte[3];
            sends[0] = 0x1d;
            sends[1] = 0x21;
            sends[2] = 0x11;
            mService.write(sends);
            try {
                mService.write("武汉 - 宜昌".getBytes("GBK"));
            } catch (UnsupportedEncodingException e) {
                e.printStackTrace();
            }

            //横坐标
            sends = new byte[4];
            sends[0] = 0x1b;
            sends[1] = 0x24;
            sends[2] = (byte) 0x80;
            sends[3] = 0x01;
            mService.write(sends);
            //纵坐标
            sends = new byte[4];
            sends[0] = 0x1d;
            sends[1] = 0x24;
            sends[2] = (byte) 0x30;
            sends[3] = 0x00;
            mService.write(sends);
            //设置三倍字体大小
            sends = new byte[3];
            sends[0] = 0x1d;
            sends[1] = 0x21;
            sends[2] = 0x00;
            mService.write(sends);
            try {
                mService.write((i + "/100").getBytes("GBK"));
            } catch (UnsupportedEncodingException e) {
                e.printStackTrace();
            }

            //横坐标
            sends = new byte[4];
            sends[0] = 0x1b;
            sends[1] = 0x24;
            sends[2] = (byte) 0x30;
            sends[3] = 0x00;
            mService.write(sends);
            //纵坐标
            sends = new byte[4];
            sends[0] = 0x1d;
            sends[1] = 0x24;
            sends[2] = (byte) 0x68;
            sends[3] = 0x00;
            mService.write(sends);
            try {
                mService.write("收货店(超)：沃尔玛汉口宗关店".getBytes("GBK"));
            } catch (UnsupportedEncodingException e) {
                e.printStackTrace();
            }

            //横坐标
            sends = new byte[4];
            sends[0] = 0x1b;
            sends[1] = 0x24;
            sends[2] = (byte) 0x30;
            sends[3] = 0x00;
            mService.write(sends);
            //纵坐标
            sends = new byte[4];
            sends[0] = 0x1d;
            sends[1] = 0x24;
            sends[2] = (byte) 0x88;
            sends[3] = 0x00;
            mService.write(sends);
            try {
                mService.write("收货地址：武汉市江岸区解放南路168号\n    融科天城一期4栋2单元802室".getBytes("GBK"));
            } catch (UnsupportedEncodingException e) {
                e.printStackTrace();
            }

            //横坐标
            sends = new byte[4];
            sends[0] = 0x1b;
            sends[1] = 0x24;
            sends[2] = (byte) 0x30;
            sends[3] = 0x00;
            mService.write(sends);
